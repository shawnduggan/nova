{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:obsidianmd/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint",
    "deprecation",
    "eslint-comments",
    "obsidianmd"
  ],
  "globals": {
    "AsyncGenerator": "readonly",
    "NodeJS": "readonly",
    "EventListener": "readonly",
    "DocumentEventMap": "readonly",
    "HTMLElementTagNameMap": "readonly"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_" }
    ],
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-floating-promises": "error",
    "@typescript-eslint/require-await": "error",
    "@typescript-eslint/await-thenable": "error",
    "@typescript-eslint/no-unnecessary-type-assertion": "error",
    "@typescript-eslint/no-misused-promises": "error",
    "@typescript-eslint/restrict-template-expressions": [
      "error",
      {
        "allowNumber": true,
        "allowBoolean": true,
        "allowNullish": false,
        "allowNever": false
      }
    ],
    "no-unused-vars": "off",
    "no-undef": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "warn",
    "no-unused-expressions": "error",
    "no-case-declarations": "error",
    "no-mixed-spaces-and-tabs": "error",

    // TypeScript casting rules (simplified to avoid parser service requirements)
    "@typescript-eslint/consistent-type-assertions": [
      "error",
      {
        "assertionStyle": "as",
        "objectLiteralTypeAssertions": "allow-as-parameter"
      }
    ],

    // Deprecation detection (catches substr and other deprecated APIs)
    "deprecation/deprecation": "error",

    // ESLint comment management (Obsidian requirement)
    "eslint-comments/require-description": "error"
  },
  "ignorePatterns": [
    "main.js",
    "*.d.ts",
    "node_modules/",
    "dist/",
    "build/",
    "src/tests/**/*.ts"
  ],
  "overrides": []
}