{
  "name": "nova",
  "version": "1.0.0",
  "description": "AI writing partner that directly edits documents",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs development-once",
    "build:prod": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "ai",
    "writing",
    "editor"
  ],
  "author": "Shawn Duggan",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.25.5",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "obsidian": "latest",
    "ts-jest": "^29.1.0",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  }
}
