{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "globals": {
    "AsyncGenerator": "readonly"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_" }
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    "no-unused-vars": "off",
    "no-undef": "error",
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "warn",
    "no-case-declarations": "error",
    "no-mixed-spaces-and-tabs": "error"
  },
  "ignorePatterns": [
    "main.js",
    "*.d.ts",
    "node_modules/",
    "dist/",
    "build/"
  ]
}